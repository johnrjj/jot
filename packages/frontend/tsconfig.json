{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es7",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types/*",
    ],
    "esModuleInterop": true,
    "exclude": [
      "node_modules",
      "dist",
      ".cache"
    ]
  }
}